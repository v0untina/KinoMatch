generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Юзер
model User {
  id    Int       @id @default(autoincrement()) 
  email String
  otp   OTPCode[]
}

// OTP-код
model OTPCode {
  id     Int  @id @default(autoincrement()) 
  user   User @relation(fields: [userId], references: [id])
  userId Int
  code   Int

  expirationDate DateTime
  expired        Boolean

  @@unique([userId, code])
}